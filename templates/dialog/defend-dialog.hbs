<form class="custom-dialog">
  
  <div class="form-group">
    <label>{{localize 'MB.Defend'}} {{localize 'MB.DR'}}:</label>
    <input
      type="text"
      name="defensebasedr"
      value="{{defendDR}}"
      placeholder="12"
      data-dtype="Number"
    />
  </div>
  <div class="form-group">
    <label>{{localize 'MB.Modified'}} {{localize 'MB.DR'}}:</label>
    <input
      type="text"
      class="readonly"
      name="defensemodifieddr"
      value="{{sum defendDR totalModifier}}"
      placeholder=""
      readonly
      data-tooltip="<div class='dr-sources-tooltip'>{{#each drSources}}{{name}}: {{#if (gt value 0)}}+{{/if}}{{value}}&#13;{{/each}}</div>"
    />
  </div>
  <div class="form-group">
    <label>{{localize 'MB.IncomingAttack'}}:</label>
    <input
      type="text"
      name="incomingattack"
      value="{{incomingAttack}}"
      placeholder="1d6"
      data-dtype="String"
    />
  </div>
</form>
