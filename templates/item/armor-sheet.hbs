<form class="flexcol {{cssClass}}" autocomplete="off">
  {{> systems/crysborg/templates/item/common/sheet-header.hbs }} 
  {{> systems/crysborg/templates/item/common/sheet-tabs.hbs }}

  <section class="sheet-body">
    {{> systems/crysborg/templates/common/description-tab.hbs }} 
    
    {{!-- Details Tab --}}
    <div class="tab" data-group="primary" data-tab="details">
      {{!-- Armor Current Tier --}}
      <div class="form-group">
        <label>{{ localize "MB.ArmorCurrentTier" }}:</label>
        <select name="system.tier.value" data-dtype="Number">
          {{#select data.system.tier.value}}
            {{#each config.armorTiers as |tierObj tierNum|}}
              <option value="{{tierNum}}">
                {{tierNum}} ({{localize tierObj.key}})
              </option>
            {{/each}}
          {{/select}}
        </select>
      </div>

      {{!-- Armor Max Tier --}}
      <div class="form-group">
        <label>{{ localize "MB.ArmorMaxTier" }}:</label>
        <select name="system.tier.max" data-dtype="Number">
          {{#select data.system.tier.max}} 
            {{#each config.armorTiers as |tierObj tierNum|}}
              <option value="{{tierNum}}">
                {{tierNum}} ({{localize tierObj.key}})
              </option>
            {{/each}}
          {{/select}}
        </select>
      </div>

      {{!-- Tier Note --}}
      <div class="form-group">
        <label>{{ localize "MB.ArmorTierNote" }}:</label>
        <input name="system.tierNote" type="text" value="{{data.system.tierNote}}" data-dtype="String"/>
      </div>

      {{!-- Base Fields (moved to bottom) --}}
      {{> systems/crysborg/templates/item/common/base-fields.hbs }} 
    </div>
  </section>
</form>
