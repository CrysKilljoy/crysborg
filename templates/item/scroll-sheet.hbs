<form class="flexcol {{cssClass}}" autocomplete="off">
  {{> systems/crysborg/templates/item/common/sheet-header.hbs }} 
  {{> systems/crysborg/templates/item/common/sheet-tabs.hbs }}

  <section class="sheet-body">
    {{> systems/crysborg/templates/common/description-tab.hbs }} 
    
    {{!-- Details Tab --}}
    <div class="tab" data-group="primary" data-tab="details">
      {{!-- Scroll type --}}
      <div class="form-group">
        <label>{{ localize "MB.ItemScrollType" }}:</label>
        <select name="system.scrollType">
          {{#select data.system.scrollType}} {{#each config.scrollTypes as |name
          value|}}
          <option value="{{value}}">{{localize name}}</option>
          {{/each}} {{/select}}
        </select>
      </div>

      {{!-- Base Fields (moved to bottom) --}}
      {{> systems/crysborg/templates/item/common/base-fields.hbs }} 
    </div>
  </section>
</form>
